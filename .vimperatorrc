"set hintchars=ifjklasdhguonmerwc
set hintchars=afjdkslghoweiru

" 自動入力欄フォーカスを無効化
set focuscontent
set complete=sl

set nextpattern=^次,'\bnext\b',^>$,'^(>>|»)$','^(>|»)','(>|»)$','\bmore\b'
set previouspattern=^前,\bprev|previous\b,^<$,^(<<|«)$,^(<|«),(<|«)$

colorscheme coloflat


" key mappings {{{
" clear all key mappings
" to avaid troubles from loading rc file
mapclear
cmapclear
imapclear

" reload .vimperatorrc
map <C-r> :source ~/.vimperatorrc<CR>
echo "### Finish loading vimperatorrc. ###"

" emacs cursor moving keybind in insert mode
inoremap <C-f> <Right>
inoremap <C-b> <Left>
inoremap <C-n> <Down>
inoremap <C-p> <Up>
"inoremap <C-v> <PageDown>
"inoremap <A-v> <PageUp>

cnoremap <C-f> <Right>
cnoremap <C-b> <Left>
cnoremap <C-n> <Down>
cnoremap <C-p> <Up>

" Avoid a problem that blur focus in insert mode
"iunmap <Tab>

nnoremap H <Left>
nnoremap L <Right>
nnoremap h gT
nnoremap l gt
nnoremap <C-p> <A-Left>
nnoremap <C-n> <A-Right>

nnoremap s :tabnew google 
